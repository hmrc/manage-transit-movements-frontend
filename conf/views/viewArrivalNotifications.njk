{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}
{% from "macros/table.njk"                         import arrivalNotification %}

{% block pageTitle %}
  {{ title(messages("viewArrivalNotifications.title")) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-xl">
              {{ messages("viewArrivalNotifications.heading") }}
            </h1>
             <p class="govuk-body"><a href="movement-reference">{{ messages("viewArrivalNotifications.makeArrivalNotification") }}</a></p>


            <h2 class="govuk-heading-m">{{ dataRows.date }}</h2>

            {{ arrivalNotification(dataRows) }}

             <p class="govuk-body govuk-!-margin-top-3"><a href="homepage">Go to manage transit movements</a></p>
        </div>
    </div>

{% endblock %}
